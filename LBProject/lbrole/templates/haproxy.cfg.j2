defaults
    mode                    http
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
   
frontend main
    bind *:5000
    default_backend       app

backend app
    balance     roundrobin
     {% for webip in groups["myweb"] %}
     server app{{ webip }} {{ webip }}:80 check
     {% endfor %}
